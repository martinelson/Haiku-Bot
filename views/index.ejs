<% if (lineOne.length === 0) { %>
  <div class="title1">

  <h1>Click on the button</h1>
  <h1>To randomly generate</h1>
  <h1>A nonsense haiku</h1>


<% } else{ %>
  <body>
  <div class="title2">

  <h1><%= lineOne %></h1>
  <h1><%= lineTwo %></h1>
  <h1><%= lineThree %></h1>


<%  } %>
<form action="/" method="post">
  <button class="btn btn-lg btn-danger" type="submit" name="generateHaiku">Haiku Me</button>
</form>
<% if (lineOne.length >= 1) { %>
  <p>See summary below</p>
<% } %>
</div>
</div>
<% if (lineOne.length >= 1) { %>
<div class="summary">
  <div class="row">
    <div class="col-lg-4">
      <h1>Word</h1>
    </div>
    <div class="col-lg-4">
      <h1>Definition</h1>
    </div>
    <div class="col-lg-4">
      <h1>Syllables Count</h1>
    </div>
  </div>
  <br>
  <h3><u>Line One Summary</u></h3>
  <br />
  <% lineOneSummary.forEach(function(word){ %>
    <div class="row">
      <div class="col-lg-4">
      <h5><%= word.word %></h5>
      </div>
      <div class="col-lg-4">
      <h5><%= word.def %></h5>
      </div>
      <div class="col-lg-4">
      <h5><%= word.syllables %></h5>
      </div>
    </div>
    <% }) %>
    <br>
  <h3><u>Line Two Summary</u></h3>
  <br>
  <% lineTwoSummary.forEach(function(word){ %>
    <div class="row">
      <div class="col-lg-4">
      <h5><%= word.word %></h5>
      </div>
      <div class="col-lg-4">
      <h5><%= word.def %></h5>
      </div>
      <div class="col-lg-4">
      <h5><%= word.syllables %></h5>
      </div>
    </div>
    <% }) %>
    <br>
    <h3><u>Line Three Summary</u></h3>
    <br>
    <% lineThreeSummary.forEach(function(word){ %>
      <div class="row">
        <div class="col-lg-4">
        <h5><%= word.word %></h5>
        </div>
        <div class="col-lg-4">
        <h5><%= word.def %></h5>
        </div>
        <div class="col-lg-4">
        <h5><%= word.syllables %></h5>
        </div>
      </div>
      <% }) %>
</div>
<footer>
<p>Words used from Words API free download, syllable count may be up for debate</p>
<p>Copyright &copy; Martin Nelson</p>

</footer>
<% } %>

