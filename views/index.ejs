<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>575</title>
  <link href="https://fonts.googleapis.com/css2?family=Josefin+Slab&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/styles.css">
  <link rel="icon" href="/favicon/favicon.ico" type="image/x-icon">
</head>



<% if (lineOne.length === 0) { %>

<body>
  <div class="title1">
    <div class="text-bg">

      <h1>Click on the button</h1>
      <h1>To randomly generate</h1>
      <h1>A nonsense haiku</h1>
    </div>


    <% } else{ %>

    <body>
      <div class="title2">
        <div class="text-bg">
          <h1><%= lineOne %></h1>
          <h1><%= lineTwo %></h1>
          <h1><%= lineThree %></h1>
        </div>


        <%  } %>
        <form action="/" method="post">
          <button class="btn btn-lg btn-danger" type="submit" name="generateHaiku">Haiku Me</button>
        </form>
        <% if (lineOne.length >= 1) { %>
        <p>See summary below</p>
        <% } %>
      </div>
  </div>
  <% if (lineOne.length >= 1) { %>
  <div class="summary">
    <div class="row">
      <div class="col-lg-4">
        <h1>Word</h1>
      </div>
      <div class="col-lg-4">
        <h1>Definition</h1>
      </div>
      <div class="col-lg-4">
        <h1>Syllables Count</h1>
      </div>
    </div>
    <br>
    <h3><u>Line One Summary</u></h3>
    <br />
    <% lineOneSummary.forEach(function(word){ %>
    <div class="row">
      <div class="col-lg-4">
        <h5><%= word.word %></h5>
      </div>
      <div class="col-lg-4">
        <h5><%= word.def %></h5>
      </div>
      <div class="col-lg-4">
        <h5><%= word.syllables %></h5>
      </div>
    </div>
    <% }) %>
    <br>
    <h3><u>Line Two Summary</u></h3>
    <br>
    <% lineTwoSummary.forEach(function(word){ %>
    <div class="row">
      <div class="col-lg-4">
        <h5><%= word.word %></h5>
      </div>
      <div class="col-lg-4">
        <h5><%= word.def %></h5>
      </div>
      <div class="col-lg-4">
        <h5><%= word.syllables %></h5>
      </div>
    </div>
    <% }) %>
    <br>
    <h3><u>Line Three Summary</u></h3>
    <br>
    <% lineThreeSummary.forEach(function(word){ %>
    <div class="row">
      <div class="col-lg-4">
        <h5><%= word.word %></h5>
      </div>
      <div class="col-lg-4">
        <h5><%= word.def %></h5>
      </div>
      <div class="col-lg-4">
        <h5><%= word.syllables %></h5>
      </div>
    </div>
    <% }) %>
  </div>
  <footer>
    <h6>Words used from Words API free download, syllable count may be up for debate</h6>
    <h6>Copyright &copy; Martin Nelson</h6>

  </footer>
  <% } %>

  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>

</body>

</html>
